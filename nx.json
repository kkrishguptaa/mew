{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "mew",
  "workspaceLayout": {
    "appsDir": "templates",
    "libsDir": "packages"
  },
  "extends": "nx/presets/npm.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build"]
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": ["default"],
    "sharedGlobals": []
  }
}

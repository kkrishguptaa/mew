{
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/npm",
      { "path": "packages/*", "npm_token": "${{ secrets.NPM_TOKEN }}" }
    ],
    [
      "@semantic-release/github",
      {
        "assets": "packages/*/CHANGELOG.md",
        "gh_token": "${{ secrets.GH_TOKEN }}"
      }
    ]
  ],
  "verifyConditions": [
    "@semantic-release/changelog",
    ["@semantic-release/npm", { "path": "packages/*" }],
    "@semantic-release/git"
  ],
  "prepare": [
    [
      "@semantic-release/changelog",
      { "changelogFile": "packages/*/CHANGELOG.md" }
    ],
    ["@semantic-release/npm", { "path": "packages/*" }]
  ],
  "publish": [
    ["@semantic-release/github", { "assets": "packages/*/CHANGELOG.md" }],
    ["@semantic-release/npm", { "path": "packages/*" }]
  ],
  "success": [
    ["@semantic-release/github", { "assets": "packages/*/CHANGELOG.md" }]
  ],
  "fail": [
    ["@semantic-release/github", { "assets": "packages/*/CHANGELOG.md" }]
  ],
  "branches": [{ "name": "main" }]
}
